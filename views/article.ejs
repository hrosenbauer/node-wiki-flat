<% layout('layout') -%>

<button type="button" class="btn btn-default btn-sm" id="edit" title="Edit">
    <span class="glyphicon glyphicon-edit"></span>
</button>

<div id="article"></div>

<form role="form" id="editor">
    <div id="notify-error" class="alert alert-danger">
        <strong>Oh snap!</strong> Something went wrong. Why don't you fetch a coffee and try again.
    </div>
    <div id="content-group" class="form-group">
        <textarea id="content" class="form-control"><%= article.content %></textarea>
    </div>
    <div class="form-group">
        <button type="reset" class="btn btn-default" id="reset">Reset</button>
        <button type="button" class="btn btn-primary" id="save">
            <span class="glyphicon glyphicon-cloud"></span> Save
        </button>
    </div>
</form>
